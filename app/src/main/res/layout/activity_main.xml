<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/pergaminho" android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:scaleType="center"/>
    <TextView
            android:text="O jogo das 3 runas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            android:fontFamily="@font/caesar_dressing" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="@+id/imageView"
            android:layout_marginTop="40dp" android:textSize="34sp" android:textStyle="bold"
            android:textColor="@color/black"/>
    <TextView
            android:text="Oração de invocação ao Guardião das Runas Sagradas"
            android:layout_width="300dp"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            android:textSize="28sp" android:textColor="@color/black"
            android:fontFamily="@font/caesar_dressing"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="40dp"
            android:textStyle="bold" android:textAllCaps="true" android:textAlignment="center"/>

    <TextView
            android:text="Poderoso Odin, Mestre das Runas Secretas. Guie minhas mãos e pensamentos para que minhas perguntas sejam respondidas com a verdade e que eu possa sempre multiplicar e gerar boas sementes em todas as direções de minha vida."
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:fontFamily="@font/caesar_dressing"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAllCaps="true"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"/>

    <ImageView
            android:layout_width="208dp"
            android:layout_height="130dp"
            app:srcCompat="@drawable/botaocontinuar"
            android:id="@+id/continuar"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:layout_marginTop="40dp"
            android:onClick="continuar"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintVertical_bias="0.120000005"/>

</androidx.constraintlayout.widget.ConstraintLayout>